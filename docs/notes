    <script>

        function countPaws() {
            const divDisplay = document.querySelector("div.display");
            let wd = divDisplay.offsetWidth;
            wd = Math.floor(wd / 23);
            console.log(wd);
            return wd;
        }

        function drawPaws(item) {
            let num = countPaws();
            for (let i=0; i< num; i++) {
                item.innerHTML += "<span>&#128062;</span>" ;
            }
        }


        function drawDividers() {
            const arr = document.querySelectorAll(".divider");
            for (let divider of arr) {
                drawPaws(divider);
            }
        }

        drawDividers();

    </script>





